# ===============================================
# S3 Vector Service Configuration
# ===============================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
API_TITLE=S3 Vector Service
API_VERSION=1.0.0
DOCS_URL=/docs
REDOC_URL=/redoc

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=eu-central-1
AWS_PROFILE=

# S3 Vector Configuration (requires AWS S3 Vectors preview access)
S3_VECTOR_BUCKET_NAME=your-s3-vector-bucket-name
S3_VECTOR_INDEX_NAME=default-index
S3_BUCKET_REGION=

# Vector Processing Configuration
VECTOR_DIMENSION=768
EMBEDDING_MODEL=all-mpnet-base-v2
MAX_TEXT_LENGTH=512
TEXT_TRUNCATION_STRATEGY=end
IMAGE_RESIZE_WIDTH=224
IMAGE_RESIZE_HEIGHT=224
IMAGE_FORMAT=JPEG

# Query Defaults (AWS S3 Vectors limits: topK must be 1-30)
DEFAULT_TOP_K=10
MAX_TOP_K=30
DEFAULT_SIMILARITY_THRESHOLD=0.0
MAX_LIST_LIMIT=30
DEFAULT_LIST_LIMIT=10

# File Validation Configuration
MAX_FILE_SIZE_MB=50
MAX_BATCH_SIZE_MB=200
ALLOWED_FILE_TYPES=text/*,application/pdf,image/*
BLOCKED_FILE_EXTENSIONS=.exe,.bat,.cmd,.scr,.com,.pif,.dll,.sys
ALLOW_EMPTY_FILES=false
STRICT_MIME_TYPE_CHECKING=true

# Performance Configuration
REQUEST_TIMEOUT=30
UPLOAD_TIMEOUT=300
QUERY_TIMEOUT=60
MAX_CONCURRENT_UPLOADS=10
MAX_CONCURRENT_QUERIES=50
ENABLE_EMBEDDING_CACHE=false
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1.0
EXPONENTIAL_BACKOFF=true

# Note: This implementation requires access to AWS S3 Vectors preview
# S3 Vectors is currently available in limited regions:
# - US East (N. Virginia)
# - US East (Ohio)  
# - US West (Oregon)
# - Asia Pacific (Sydney)
# - Europe (Frankfurt) 